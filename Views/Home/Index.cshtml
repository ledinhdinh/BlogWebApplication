			<div class="row mb-3">
				<div class="col">
					<h2 class="h2">Latest Blog Post</h2>
				</div>
				<div class="col">
					@using (Html.BeginForm("AddNewBlog", "BlogWebs", FormMethod.Post ,new { enctype = "multipart/form-data" }))
					{
						<div class="add-new">
							<!-- Button trigger modal -->
							<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
								<ion-icon name="add"></ion-icon>Tạo bài viết
							</button>
							<!-- Modal -->
							<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
								<div class="modal-dialog modal-lg">
									<div class="modal-content">
										@* Title *@
										<div class="modal-header">
											<h5 class="modal-title" id="exampleModalLabel">Thêm bài viết</h5>
											<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
										</div>
										@* Body *@
										<div class="modal-body">
											<div class="form-group">
												<div class="row mb-3">
													@* Tiêu đề *@
													<div class="col-md-6">
														<div class="row">
															<label class="col-sm-4 col-form-label">Tiêu đề</label>
															<div class="col-sm-8">
																<input type="text" class="form-control" asp-for="BlogName" />
															</div>
														</div>
													</div>
													@* Tác giả *@
													<div class="col-md-6">
														<div class="row">
															<label class="col-sm-4 col-form-label">Tác giả</label>
															<div class="col-sm-8">
																<input type="text" class="form-control" asp-for="Author" />
															</div>
														</div>
													</div>
												</div>

												<div class="row mb-3">
													@* Thời gian*@
													<div class="col-md-6">
														<div class="row">
															<label class="col-sm-4 col-form-label">Thời gian</label>
															<div class="col-sm-8">
																<input type="type" class="form-control" asp-for="ReadingTime" />
															</div>
														</div>
													</div>
													@* Đường dẫn *@
													<div class="col-md-6">
														<div class="row">
															<label class="col-sm-4 col-form-label">Đường dẫn</label>
															<div class="col-sm-8">
																<input type="type" class="form-control" asp-for="Link" />
															</div>
														</div>
													</div>
												</div>

												<div class="row mb-3">
													@* Loại *@
													<div class="col-md-6">
														<div class="row">
															<label class="col-sm-4 col-form-label">Loại bài viết </label>
															<div class="col-sm-8">
																@* <input type="select" class="form-control" asp-for="CategoryID" /> *@
																<select class="form-select" asp-for="CategoryID">
																	@foreach (var item in Model.listCategory)
																	{
																		<option value="@item.Text">@item.Text</option>
																	}
																</select>
															</div>
														</div>
													</div>
												</div>

												<div class="row mb-3">
													@* Hình ảnh *@
													<div class="col-md-12">
														<div class="row">
															<label class="col-sm-2 col-form-label">Hình ảnh </label>
															<div class="col-sm-10">
																<input type="file" class="form-control" asp-for="Image" onchange="displayImage(this)" />
																<img id="previewImage" height="250" width="250" style="border:1px solid #333" />
															</div>
														</div>
													</div>
												</div>

												<div class="row mb-3">
													@* Mô tả *@
													<div class="col-md-12">
														<div class="row">
															<label class="col-sm-2 col-form-label">Mô tả </label>
															<div class="col-sm-10">
																<textarea class="form-control" asp-for="BlogDescription" rows="10"></textarea>
															</div>
														</div>
													</div>
												</div>
											</div>
										</div>
										@* Footer modal *@
										<div class="modal-footer">
											<input type="button" onclick="return resetValue();" data-bs-dismiss="modal" class="btn btn-danger" value="Đóng" />
											<input type="submit" id="btnSave" class="btn btn-success" value="Lưu" />
										</div>
									</div>
								</div>
							</div>

						</div>
					}
				</div>
